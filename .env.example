# Application
APP_PORT=3000
NODE_ENV=development
API_VERSION=1
ALLOWED_ORIGINS=*

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myalternates

# Throttler
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=MyAlternates API
SWAGGER_DESCRIPTION=API documentation for the MyAlternates application
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Winston
WINSTON_LEVEL=info
WINSTON_ERROR_LOG_FILENAME=logs/error.log
WINSTON_COMBINED_LOG_FILENAME=logs/combined.log

# JWT
JWT_SECRET=supersecretkey
JWT_EXPIRES_IN=1h

# Notifications - Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=password
EMAIL_FROM="MyAlternates <no-reply@myalternates.com>"

# Notifications - Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=my-project-id
FCM_CLIENT_EMAIL=firebase-adminsdk-xxxxx@my-project-id.iam.gserviceaccount.com
FCM_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"